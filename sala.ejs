    if(acertou){

     $('.chat-area').append('<p class="escrita-usuario"><span class="nome">'+nick+' ACERTOU</span></p>')
        

    }else{

      $('.chat-area').append('<p class="escrita-usuario"><span class="nome">'+nick+' ERROU.</span></p>')
        
    }
    $(".chat-area").scrollTop(1000);

